pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Docker image name and tag
                    def imageName = 'your-docker-image'
                    def imageTag = 'latest'

                    // Build the Docker image with echo statement
                    sh "docker build -t ${alpine}:${latest} -f Dockerfile ."

                    // Push the Docker image (optional)
                    // sh "docker push ${alpine}:${latest}"
                }
            }
        }
    }
}
